{
  "name": "vscode-diff-html-exporter",
  "displayName": "Diff HTML Exporter",
  "description": "Export diff editor content as HTML",
  "publisher": "hdeg",
  "version": "0.0.2",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "keywords": [
    "diff",
    "html",
    "compare",
    "export"
  ],
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/exit1991/vscode-diff-html-exporter.git"
  },
  "homepage": "https://github.com/exit1991/vscode-diff-html-exporter",
  "bugs": {
    "url": "https://github.com/exit1991/vscode-diff-html-exporter/issues"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-diff-html-exporter.exportHtml",
        "title": "%command.exportHtml%",
        "icon": "$(export)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vscode-diff-html-exporter.exportHtml",
          "when": "isInDiffEditor",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "vscode-diff-html-exporter.exportHtml",
          "when": "isInDiffEditor",
          "group": "2_diffhtmlexporter@1"
        }
      ],
      "commandPalette": [
        {
          "command": "vscode-diff-html-exporter.exportHtml",
          "when": "isInDiffEditor"
        }
      ]
    }
  },
  "l10n": "./l10n",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "diff": "^8.0.3",
    "diff2html": "^3.4.56"
  }
}
